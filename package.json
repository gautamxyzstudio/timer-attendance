{
  "name": "time-tracker",
  "productName": "Time Tracker",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "main": "electron/main.cjs",

  "scripts": {
    "dev": "vite",
    "preview": "vite preview",

    "electron": "electron electron/main.cjs",
    "start": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron electron/main.cjs\"",

    "build:web": "vite build",
    "build:app": "npm run build:web && electron-builder",

    "build:mac": "npm run build:web && electron-builder --mac",
    "build:win": "npm run build:web && electron-builder --win"
  },

  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "tailwindcss": "^4.1.18"
  },

  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  },

  "build": {
  "appId": "com.xyz.timetracker",
  "productName": "Time Tracker",

  "asar": true,

  "directories": {
    "buildResources": "assets",
    "output": "release"
  },

  "files": [
    "dist/**",
    "electron/**",
    "assets/**",
    "package.json"
  ],

  "win": {
  "icon": "assets/icons/icon.ico",
  "target": [
    {
      "target": "nsis",
      "arch": ["x64"]
    }
  ]
},
"mac": {
  "target": [
    {
      "target": "dmg",
      "arch": ["x64", "arm64"]
    }
  ],

  "icon": "assets/icons/icon.icns",

  "hardenedRuntime": true,
  "gatekeeperAssess": false,

  "entitlements": "assets/entitlements.mac.plist",
  "entitlementsInherit": "assets/entitlements.mac.plist",

  "identity": null
}
,
  "linux": {
    "icon": "assets/icons/icon.png",
    "target": ["AppImage", "deb"]
  }
} 
}
